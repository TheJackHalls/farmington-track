---
import "../styles/global.css";
import { withBase } from "../lib/paths";

const { title = "Farmington Track" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body>
    <header>
      <div class="mx-auto flex max-w-5xl flex-col gap-4 px-4 py-6 sm:flex-row sm:items-center sm:justify-between">
        <div>
          <p class="text-lg font-semibold">Farmington Track</p>
          <p class="text-sm text-slate-600">Meet updates, results, and athlete profiles.</p>
        </div>
        <nav class="flex flex-wrap gap-4">
          <a href={withBase("")}>Home</a>
          <a href={withBase("announcements/")}>Announcements</a>
          <a href={withBase("results/")}>Results</a>
          <a href={withBase("leaderboards/")}>Leaderboards</a>
          <a href={withBase("athletes/olivia-hart/")}>Athlete</a>
        </nav>
      </div>
    </header>
    <main>
      <slot />
    </main>
  </body>
</html>
